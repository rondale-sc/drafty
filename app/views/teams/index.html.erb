<h1 style="font-size:96px;"><center>Teams<span style="font-size:12px;color:#777777;">yowza.</span></center></h1><br/><br/>
<div class="grid_6">
<% @teams.each do |team| %>
  <table>
    <th><%=team.name %></th>
    <% team.players.each do |player| %>
      <tr>
        <td style="font-size:14px;color:#777777"><%= (player.first_name + " " + player.last_name + " " + player.position) %></td>
        <td>
      </tr>
    <%end%>
    <td style="color:#627aad;font-size:12px;text-align:right;padding-top:0px;text-decoration:none;">(<%= 16 - team.players.length%> players left)</td>
    <hr/>
  <%end%>
</table>
</div>




<br />
<% if params[:lock] %>
  <%= link_to 'New Team', new_team_path %>
<% end %>
