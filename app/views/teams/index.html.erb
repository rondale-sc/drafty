<h1 style="font-size:72px;"><center>Teams<span style="font-size:12px;color:#777777;">yowza.</span></center></h1><br/><br/>
<% increment = 0 %>

<% @teams.each do |team| %>
<span style="text-decoration:underline;"><%=team.name %></span>&nbsp;<span style="font-size:12px;color:#777777;text-decoration:none;">(<%= team.player_name %>)</span>
</span>
<table>
  <% team.drafts.order("round").each do |draft| %>
    <tr class="<%= cycle("even","odd")%>">
      <td style="font-size:20px;color:#777777;padding-top:10px;width:35px;"><%= draft.round %>.</td>
      <td style="font-size:20px;color:#777777;padding-top:10px;"><%= player_link(draft.player) if draft.player.present? %></td>
    </tr>
  <%end%>

  <tr><td colspan=2 style="color:#627aad;font-size:12px;text-align:right;padding-top:0px;text-decoration:none;">(<%= team.drafts.pending.count %> players left)</td></tr>
  <hr/>
</table>
<%end%>